<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cats"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />

    <application android:label="@string/app_name" >
        <activity
            android:name=".launch.LaunchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dashboard.activity.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.cats.dashboard.activity.DASHBOARDACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Menu Activity -->
        <activity
            android:name=".menu.activity.PreferencesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.cats.menu.activity.PREFERENCEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.activity.SoundActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.cats.menu.activity.SOUNDACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>